html {
  font-size: 100%;
  font-family: 'Noto Sans JP';
}

body {
  width: 100%;
  margin: 0;
  padding: 0;
  line-height: 1.5;
  position: relative;
}

li {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

a {
  color: inherit;
  text-decoration: none;
}

img {
  max-width: 100%;
  height: auto;
  outline: none;
  vertical-align: top;
}
